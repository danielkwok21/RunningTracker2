<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danie.runningtracker2.Activities.ViewTracks">


    <TextView
        android:id="@+id/track_detailed_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/startAt"
        app:layout_constraintBottom_toTopOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintEnd_toEndOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintStart_toStartOf="@+id/track_detailed_startdate_tv" />

    <TextView
        android:id="@+id/track_detailed_startdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:text="StartDate"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toEndOf="@+id/track_detailed_distance"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/track_detailed_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/endAt"
        app:layout_constraintBottom_toTopOf="@+id/track_detailed_enddate_tv"
        app:layout_constraintEnd_toEndOf="@+id/track_detailed_enddate_tv"
        app:layout_constraintStart_toStartOf="@+id/track_detailed_enddate_tv" />

    <TextView
        android:id="@+id/track_detailed_enddate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="EndDate"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintStart_toStartOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_startdate_tv" />

    <TextView
        android:id="@+id/track_detailed_starttime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="StartTime"
        app:layout_constraintEnd_toEndOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintStart_toStartOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_startdate_tv" />

    <TextView
        android:id="@+id/track_detailed_endtime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="EndTime"
        app:layout_constraintEnd_toEndOf="@+id/track_detailed_enddate_tv"
        app:layout_constraintStart_toStartOf="@+id/track_detailed_enddate_tv"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_enddate_tv" />

    <TextView
        android:id="@+id/track_detailed_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:text="distance"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/track_detailed_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:text="speed"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_distance" />

    <TextView
        android:id="@+id/track_detailed_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="duration"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_speed"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>