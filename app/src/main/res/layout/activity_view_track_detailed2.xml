<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danie.runningtracker2.Activities.ViewTracks">


    <TextView
        android:id="@+id/track_detailed_startdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="StartDate"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/track_detailed_enddate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="EndDate"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/track_detailed_startdate_tv" />

    <TextView
        android:id="@+id/track_detailed_starttime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="StartTime"
        app:layout_constraintEnd_toEndOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintStart_toStartOf="@+id/track_detailed_startdate_tv"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_startdate_tv" />

    <TextView
        android:id="@+id/track_detailed_endtime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="EndTime"
        app:layout_constraintEnd_toEndOf="@+id/track_detailed_enddate_tv"
        app:layout_constraintStart_toStartOf="@+id/track_detailed_enddate_tv"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_enddate_tv" />

    <TextView
        android:id="@+id/track_detailed_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="8dp"
        android:text="distance"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_endtime_tv" />

    <TextView
        android:id="@+id/track_detailed_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="duration"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track_detailed_distance" />
</android.support.constraint.ConstraintLayout>